{
  "compilerOptions": {
    "target": "ES2020", // Set ECMAScript target version (Node.js 14+ supports ES2020 features)
    "module": "CommonJS", // Use CommonJS for module system (standard in Node.js)
    "moduleResolution": "node", // Use Node.js resolution strategy for imports
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Enable compatibility for importing ES modules
    "skipLibCheck": true, // Skip type checking of declaration files for faster compilation
    "forceConsistentCasingInFileNames": true, // Enforce consistent file naming casing
    "outDir": "./dist", // Output directory for compiled JavaScript files
    "rootDir": "./src", // Root directory of TypeScript files
    "resolveJsonModule": true, // Allow importing JSON files as modules
    "allowJs": true, // Allow JavaScript files to be included
    "declaration": true, // Generate .d.ts declaration files (if needed)
    "sourceMap": true // Generate source maps for easier debugging
  },
  "include": [
    "src/**/*.ts" // Include all TypeScript files in the 'src' directory
  ],
  "exclude": [
    "node_modules", // Exclude node_modules directory
    "**/*.spec.ts" // Optionally exclude test files
  ]
}
